form:
  - anaconda_version
  - conda_env
  - jupyterlab_switch
  - config_type
  - preset_configuration
  - cluster
  - account
  - partition_name
  - qos_name
  - num_hours
  - num_cores
  - reservation
  - gres

attributes:
  preset_configuration:
     widget: select
     label: "Preset configuration"
     options:
       - ["1 core, 12 hours", "1x12alpine"]
       - ["4 cores, 4 hours", "4x4alpine"]
  anaconda_version:
     widget: select
     label: Anaconda Version
     options:
       - ["2020.11", "anaconda/2020.11"]
       - ["2022.10", "anaconda/2022.10"]
  conda_env:
     widget: text_field
     label: Conda environment
     value: "base"
     help: |
       Important: Please check your spelling, if the provided environment is not found it will default to the environment "base". For more information on creating a compatible Conda environment, please see [Creating a Jupyter Session Conda Environment](https://curc.readthedocs.io/en/latest/gateways/OnDemand.html#creating-a-jupyter-session-conda-environment).
  jupyterlab_switch:
     widget: "check_box"
     value: 1
     label: Use JupyterLab instead of Jupyter Notebook?
  cluster:
     widget: select
     options:
       - ["Alpine", "alpine"]
       - ["Blanca", "blanca"]
  num_cores:
     widget: "number_field"
     label: "Number of cores"
     value: 1
     min: 1
     max: 64
     step: 1
  account:
     widget: text_field
     value: "ucb-general"
  partition_name:
     value: ahub
     label: Partition
  num_hours:
     widget: "number_field"
     label: "Time"
     value: 4
     min: 1
     max: 24
  qos_name:
     widget: text_field
     label: QoS
     value: "interactive"
  reservation:
     widget: text_field
     label: Reservation (default is None)
     value: None
  gres:
     widget: text_field
     label: gres options (default is None)
     value: None
  config_type:
     widget: select
     label: Configuration type
     options:
       - ['Preset configuration', 'presets', data-hide-cluster: true, data-hide-num-cores: true, data-hide-account: true, data-hide-partition-name: true, data-hide-num-hours: true, data-hide-qos-name: true,  data-hide-reservation: true,  data-hide-gres: true]
       - ['Custom configuration', 'custom', data-hide-preset-configuration: true]
     cacheable: false