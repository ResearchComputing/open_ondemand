form:
  - r_version
  - config_type
  - preset_configuration
  - cluster
  - account
  - partition_name
  - qos_name
  - num_hours
  - num_cores
  - reservation
  - gres

attributes:
  preset_configuration:
     widget: select
     label: "Preset configuration"
     options:
       - ["1 core, 12 hours", "1x12alpine"]
       - ["4 cores, 4 hours", "4x4alpine"]
  r_version:
     widget: "select"
     label: "RStudio Version"
     options:
       - [ "Rstudio 2024.04.2, R 4.4.1", "4.4.1"]
       - [ "Rstudio 2023.03.0, R 4.2.2", "4.2.2"]
  cluster:
     widget: select
     options:
       - ["Alpine", "alpine"]
       - ["Blanca", "blanca"]
  num_cores:
     widget: "number_field"
     label: "Number of cores"
     value: 1
     min: 1
     max: 64
     step: 1
  account:
     widget: text_field
     value: "ucb-general"
  partition_name:
     value: ahub
     label: Partition
  num_hours:
     widget: "number_field"
     label: "Time"
     value: 4
     min: 1
     max: 24
  qos_name:
     widget: text_field
     label: QoS
     value: "interactive"
  reservation:
     widget: text_field
     label: Reservation (default is None)
     value: None
  gres:
     widget: text_field
     label: gres options (default is None)
     value: None
  config_type:
     widget: select
     label: Configuration type
     options:
       - ['Preset configuration', 'presets', data-hide-cluster: true, data-hide-num-cores: true, data-hide-account: true, data-hide-partition-name: true, data-hide-num-hours: true, data-hide-qos-name: true,  data-hide-reservation: true,  data-hide-gres: true]
       - ['Custom configuration', 'custom', data-hide-preset-configuration: true]
     cacheable: false
